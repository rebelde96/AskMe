@model ViewDetailAdViewModel

<fieldset>
    @if (Model != null)
    {
        <div class="container">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">@Model.Title</h5>
                    <h6 class="card-subtitle mb-2 text-muted">@Model.Category.Name</h6>
                    <p class="card-text">@Model.Description</p>
                    <blockquote class="blockquote">
                        <footer class="blockquote-footer">
                            Posted from: <a asp-controller="User" asp-action="ViewUserProfile" asp-route-id="@Model.ApplicationUserId" class="card-link">@Model.ApplicationUser.UserName</a>
                        </footer>
                    </blockquote>
                    @if (Model.ApplicationUser.UserName != this.User.Identity.Name)
                    {
                        <a asp-controller="Conversation" asp-action="ShowConversation" asp-route-adId="@Model.Id" class="btn btn-primary">Send a message</a>
                    }
                    <a asp-controller="Home" asp-action="Index" class="btn btn-primary float-right">Go back</a>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-dismissible alert-warning">
            <h4 class="alert-heading">Warning!</h4>
            <p class="mb-0">It seems like this article is no longer available.</p>
        </div>
    }
</fieldset>